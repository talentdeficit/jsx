%% uncomment to get verbose output from test suite
%% {eunit_opts, [verbose]}.

{erl_opts, [
    {i, "src"},
    {src_dirs, ["src"]},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{dialyzer_opts, [{warnings, [
    unmatched_returns,
    error_handling,
    race_conditions,
    behaviours
]}]}.

{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.

{deps, [
    {
        'nicedecimal',
        ".*",
        {git, "git://github.com/talentdeficit/nicedecimal.git", {branch, "master"}}
    },
    {
        'meck',
        ".*",
        {git, "git://github.com/eproxus/meck.git", {branch, "master"}}
    }
]}.
